<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation effect="slide" start="750,0" time="250">WindowOpen</animation>
	<animation effect="slide" end="750,0" time="250">WindowClose</animation>
	<zorder>100</zorder>
	<!-- volumebar -->
	<controls>
		<control type="group">
			<animation effect="slide" end="0,50" time="200" condition="String.IsEqual(Window(10000).Property(isCaching),True)">Conditional</animation>
			<control type="image">
				<right>-200</right>
				<top>110</top>
				<width>750</width>
				<height>40</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
			</control>

			<!-- Heading -->
			<control type="label">
				<right>10</right>
				<top>120</top>
				<width>530</width>
				<height>20</height>
				<align>left</align>
				<scroll>true</scroll>
				<font>Font27</font>
				<label>[LIGHT]$LOCALIZE[13376][/LIGHT] $INFO[Control.GetLabel(404),,%]</label>
				<visible>!Player.Muted</visible>
			</control>

			<!-- Muted -->
			<control type="label">
				<right>10</right>
				<top>120</top>
				<width>530</width>
				<height>20</height>
				<align>left</align>
				<scroll>true</scroll>
				<font>Font27</font>
				<label>[LIGHT]$LOCALIZE[13376][/LIGHT] $LOCALIZE[31013]</label>
				<visible>Player.Muted</visible>
			</control>

			<!-- Progress -->
			<control type="progress" id="404">
				<visible>false</visible>
				<info>player.volume</info>
			</control>

		</control>

	</controls>

</window>